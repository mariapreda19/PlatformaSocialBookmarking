@model List<PlatformaSocialBookmarking.Models.Category>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home_index.css">

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-4">
    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning">
            <div id="missing_content">No categories available.</div>
            <a asp-controller="Categories" asp-action="New">Go to New Category</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var category in Model.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <a href="@Url.Action("Show", "Categories", new { id = category.Id })" class="card card-link image-container">
                        <div class="image-overlay"></div>
                        <div style="position: relative; overflow: hidden; height: 0; padding-bottom: 33.33%;">
                            <img src="@category.CoverUrl" class="card-img-top" alt="Category Cover" style="position: absolute; width: 100%; height: 100%; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@category.CategoryName</h5>
                        </div>
                    </a>
                </div>
            }
        </div>
    }

    @if (ViewBag.Bookmarks != null && ViewBag.Bookmarks.Count > 0)
    {
        <div class="row">
            @foreach (var bookmark in ViewBag.Bookmarks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h3>@bookmark.Title</h3>
                            <p>Created by: @bookmark.User?.UserName</p>
                        </div>
                        <div class="card-body">
                            <p>@bookmark.Description</p>
                            @if (bookmark.Bookmark_Has_Categories != null && bookmark.Bookmark_Has_Categories.Any())
                            {
                                <p>Category: @bookmark.Bookmark_Has_Categories.First()?.Category?.CategoryName</p>
                            }
                            @if (bookmark.Bookmark_Has_Images != null && bookmark.Bookmark_Has_Images.Any())
                            {
                                <h5>Images:</h5>
                                <div class="image-container">
                                    @foreach (var bookmarkHasImage in bookmark.Bookmark_Has_Images)
                                    {
                                        <img src="@bookmarkHasImage.Image?.Url" alt="Image" class="img-thumbnail" />
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <br />
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <div id="missing_content">No bookmarks available.</div>
            <a asp-controller="Bookmarks" asp-action="New">Go to New Bookmark</a>
        </div>
    }

</div>
