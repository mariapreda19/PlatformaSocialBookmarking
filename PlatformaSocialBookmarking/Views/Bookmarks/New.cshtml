@model PlatformaSocialBookmarking.Models.Bookmark

<br />

<h2 class="mb-5 text-center">Adaugare Bookmark</h2>

<br />


@using (Html.BeginForm(actionName: "New", controllerName: "Bookmarks", method: FormMethod.Post))
{

    @Html.Label("Title", "Denumire colectie")
    <br />

    @Html.TextBox("Title", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Description", "Descriere")
    <br />

    @Html.TextBox("Description", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    <br />
    <br />



    <button class="btn btn-success" type="submit">Adauga bookmark</button>

}
