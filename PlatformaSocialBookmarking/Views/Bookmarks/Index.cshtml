@model List<PlatformaSocialBookmarking.Models.Bookmark>

@{
    ViewData["Title"] = "Bookmarks";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-info">
            @TempData["message"]
        </div>
    }

    <form method="GET">
        <div class="input-group mb-3">
            <input type="text" class="form-control"
                   placeholder="Search topics or keywords" name="search"
                   value="@ViewBag.SearchString">
            <button class="btn btn-outline-success"
                    type="submit">
                Search
            </button>
        </div>
    </form>

    <!-- Add New Bookmark button here -->
    <a asp-controller="Bookmarks" asp-action="New" class="btn btn-success">New Bookmark</a>

    @foreach (var bookmark in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@bookmark.Title</h3>
                <p>Created by: @bookmark.User?.UserName</p>
            </div>
            <div class="card-body">
                @if (bookmark.Bookmark_Has_Images != null && bookmark.Bookmark_Has_Images.Any())
                {
                    <h5>Images:</h5>
                    <div class="image-container">
                        <img src="@bookmark.Bookmark_Has_Images.First()?.Image?.Url" alt="Image" class="img-thumbnail" id="mainImage-@bookmark.Id" />
                    </div>

                    <a asp-controller="Bookmarks" asp-action="Show" asp-route-id="@bookmark.Id" class="btn btn-primary">Show Bookmark</a>
                }

                @if (bookmark.Bookmark_Has_Categories != null && bookmark.Bookmark_Has_Categories.Any())
                {
                    <p>Category: @bookmark.Bookmark_Has_Categories.First()?.Category?.CategoryName</p>
                }
            </div>
        </div>
        <br />
    }
</div>
