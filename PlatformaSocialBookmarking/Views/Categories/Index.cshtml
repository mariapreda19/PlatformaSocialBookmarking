@model IEnumerable<PlatformaSocialBookmarking.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-info">
        @TempData["message"]
    </div>
}

<a asp-action="New" class="btn btn-success">Add New Category</a>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Cover URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.CoverUrl</td>
                <td>
                    <a asp-action="Show" asp-route-id="@category.Id" class="btn btn-info">Show</a>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
