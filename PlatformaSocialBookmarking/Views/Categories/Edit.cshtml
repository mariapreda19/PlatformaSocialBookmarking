@model PlatformaSocialBookmarking.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<link rel="stylesheet" href="~/css/Categories/New.css" />

<h2>@ViewData["Title"]</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-info">
        @TempData["message"]
    </div>
}

<div class="form-wrapper">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="CategoryName" class="control-label">Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CoverUrl" class="control-label">Cover URL</label>
            <input asp-for="CoverUrl" class="form-control" />
            <span asp-validation-for="CoverUrl" class="text-danger"></span>
        </div>

        
        <button type="submit" class="btn-btn-primary">Save</button> 

    </form>
</div>

