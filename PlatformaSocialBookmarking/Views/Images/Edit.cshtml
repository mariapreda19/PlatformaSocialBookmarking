@model PlatformaSocialBookmarking.Models.Image


<h2 class="text-center mt-5">Editare Postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
         
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Images", method: FormMethod.Post, routeValues: new {id = Model.Id }))
            {
                
                @Html.Label("Url", "Url pentru Poza")
                <br />
                @Html.Editor("Url", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Url, null, new { @class = "text-danger" })
                <br />  <br />

                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Modifica postarea</button>

            }
           
        </div>
    </div>
</div>
