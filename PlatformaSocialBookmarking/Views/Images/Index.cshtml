@model IEnumerable<PlatformaSocialBookmarking.Models.Image>

@{
    ViewData["Title"] = "Images";
}

<style>
    .masonry-container {
        column-count: 4;
        column-gap: 16px;
        margin: 0 auto;
    }

    .card {
        display: inline-block;
        width: 100%;
        margin-bottom: 16px;
        break-inside: avoid-column;
        overflow: hidden;
        position: relative;
    }

    .card img {
        width: 100%;
        height: auto;
        transition: transform 0.2s ease-in-out;
    }

    .card-overlay {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        font-size: 18px;
        font-weight: bold;
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
    }

    .card:hover .card-overlay {
        opacity: 1;
    }
</style>

<h2 class="text-center">Images</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-info">
        @TempData["message"]
    </div>
}

<a asp-action="New" class="btn btn-success">Add New Image</a>

<div class="masonry-container">
    @foreach (var image in Model)
    {
        <div class="card">
            <a asp-action="Show" asp-route-id="@image.Id">
                <img src="@image.Url" alt="Image" class="img-fluid" />
                <div class="card-overlay">Open post</div>
            </a>
        </div>
    }
</div>
